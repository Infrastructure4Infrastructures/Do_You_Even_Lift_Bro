// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            Int             @id @default(autoincrement())
  username      String          @unique
  password      String
  user_workouts User_Workouts[]
  food          Food[]
  journal       Journal[]
}

model User_Workouts {
  id        Int        @id @default(autoincrement())
  workoutId Int        @unique
  userId    Int
  workout   Workouts[]
  user      User       @relation(fields: [userId], references: [id])
}

model Workouts {
  id                Int                 @id @default(autoincrement())
  user_workouts     User_Workouts       @relation(fields: [id], references: [workoutId])
  difficulty        String
  description       String
  userId            Int
  workout_exercises Workout_Exercises[]
}

model Workout_Exercises {
  id         Int         @id @default(autoincrement())
  exerciseId Int         @unique
  workoutId  Int
  workouts   Workouts    @relation(fields: [workoutId], references: [id])
  exercises  Exercises[]
}

model Exercises {
  id                Int               @id @default(autoincrement())
  description       String
  workoutId         Int
  workout_exercises Workout_Exercises @relation(fields: [id], references: [exerciseId])
}

model Food {
  id            Int      @id @default(autoincrement())
  foodEntry     String
  date          DateTime
  calories      Int
  totalCalories Int
  userId        Int
  user          User     @relation(fields: [userId], references: [id])
}

model Journal {
  id           Int      @id @default(autoincrement())
  date         DateTime @default(now())
  exerciseName String
  exerciseSets Int
  exerciseReps Int
  user         User     @relation(fields: [userId], references: [id])
  userId       Int
}
